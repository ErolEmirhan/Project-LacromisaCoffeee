{
  "name": "makara-pos",
  "productName": "Makara POS",
  "version": "1.0.0",
  "description": "Makara - Modern POS System",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "start:websocket": "node websocket-server.js",
    "start:all": "concurrently \"npm run start:websocket\" \"wait-on tcp:3001 && npm run start\"",
    "test:realtime": "node test-realtime.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": ["pos", "cafe", "restaurant", "makara"],
  "author": {
    "name": "Emirhan Erol",
    "email": "erolemirhan42@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ErolEmirhan/Project-LacromisaCoffeee.git"
  },
  "build": {
    "appId": "com.makara.pos",
    "productName": "Makara POS",
    "publish": [{
      "provider": "github",
      "owner": "ErolEmirhan",
      "repo": "Project-LacromisaCoffeee"
    }],
    "win": {
      "target": ["nsis"],
      "icon": "src/assets/Logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.11.0",
    "electron": "37.2.4",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "node-loader": "^2.1.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "better-sqlite3": "^12.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "qrcode": "^1.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-qr-code": "^2.0.18",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7",
    "zustand": "^5.0.6"
  }
}
